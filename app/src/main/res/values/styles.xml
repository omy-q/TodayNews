<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsTodayText">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NewsTodayText.Large">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bolt</item>
    </style>

    <style name="NewsTodayText.Medium">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="NewsTodayText.Small">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ChipView" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/NewsTodayText.Medium</item>
        <item name="android:textColor">@drawable/selector_chip_text</item>
        <item name="android:textAlignment">center</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@drawable/selector_chip_background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ToolbarView">
        <item name="android:textAppearance">@style/NewsTodayText.Large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppbarView">
        <item name="android:background">@color/black</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="NewsTitle">
        <item name="android:textAppearance">@style/NewsTodayText.Large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NewsDescription">
        <item name="android:textAppearance">@style/NewsTodayText.Medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NewsDate">
        <item name="android:textAppearance">@style/NewsTodayText.Small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NewsCardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>