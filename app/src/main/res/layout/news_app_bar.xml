<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    style="@style/AppbarView">

    <Toolbar
        android:id="@+id/newsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        style="@style/ToolbarView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/news_toolbar_title_text"
            style="@style/ToolbarView"/>
    </Toolbar>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:singleLine="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAndroid"
            android:layout_width="@dimen/chip_width"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/chip_android"
            style="@style/ChipView"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipIos"
            android:layout_width="@dimen/chip_width"
            android:layout_height="wrap_content"
            android:text="@string/chip_ios"
            style="@style/ChipView"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipIt"
            android:layout_width="@dimen/chip_width"
            android:layout_height="wrap_content"
            android:text="@string/chip_it"
            style="@style/ChipView"/>

    </com.google.android.material.chip.ChipGroup>

</com.google.android.material.appbar.AppBarLayout>